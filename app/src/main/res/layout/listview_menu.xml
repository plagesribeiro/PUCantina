<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/model"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_fotoProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/herera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_NomeProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintStart_toEndOf="@+id/imageView_fotoProduto"
        app:layout_constraintTop_toTopOf="@+id/imageView_fotoProduto" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="@string/addCarrinho"
        app:layout_constraintBottom_toBottomOf="@+id/textView_PrecoProduto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_NomeProduto" />

    <TextView
        android:id="@+id/textView_PrecoProduto"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:text="Price"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_fotoProduto"
        app:layout_constraintStart_toStartOf="@+id/textView_NomeProduto"
        app:layout_constraintTop_toBottomOf="@+id/textView_NomeProduto" />

</androidx.constraintlayout.widget.ConstraintLayout>